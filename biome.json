{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": [
      "src/**/*",
      "public/**/*"
    ]
  },
  "formatter": {
    "lineWidth": 120,
    "lineEnding": "lf",
    "indentStyle": "space",
    "indentWidth": 2,
    "formatWithErrors": true
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single"
    }
  },
  "linter": {
    "rules": {
      "a11y": {
        "useSemanticElements": "off"
      }
    }
  }
}